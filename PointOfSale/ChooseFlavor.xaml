<Page x:Class="PointOfSale.ChooseFlavor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseFlavor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="2" Grid.Row="2" Click="ClickCherry">Cherry</Button>
        <Button Grid.Row="1" Grid.Column="1" Click="ClickChocolate">Chocolate</Button>
        <Button Grid.Row ="1" Click="ClickCola">Cola</Button>
        <Button Grid.Column="3" Click="ClickLime">Lime</Button>
        <Button Grid.Column="2" Click="ClickOrange">Orange</Button>
        <Button Grid.Column="1" Click="ClickRootBeer">Root Beer</Button>
        <Button Click="ClickVanilla">Vanilla</Button>
    </Grid>
</Page>
